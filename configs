#!/usr/bin/env bash
#############################################################################
# Utility Function(s)
#############################################################################
# shhhhh
function _which () {
  which $1 > /dev/null
}

#############################################################################
# Checkout our dotfiles
#############################################################################
DOT_FILES_REPO=${DOT_FILES_REPO:-"git@github.com:bhudgens/dotfiles.git"}
if [ ! -d "$HOME/.dotfiles" ]; then
  git clone "${DOT_FILES_REPO}" "$HOME/.dotfiles"
fi

#############################################################################
# Install Root Level dotfiles
#############################################################################
for dotfile in .zshrc .tmux.conf .vimrc; do
  if [ ! -L "${HOME}/${dotfile}" ] \
  && [ -f "${HOME}/.dotfiles/${dotfile}" ]; then
    mv "${HOME}/${dotfile}" "${HOME}/${dotfile}.bak"
    ln -s "${HOME}/.dotfiles/${dotfile}" "${HOME}/${dotfile}"
  fi
done
